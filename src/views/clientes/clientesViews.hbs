<div class="container mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de Personas</h3>
    <div class="row">
        <div class="col-md-6 order-md-2">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Buscar...">
                <button class="btn btn-primary" type="button">Buscar</button>
            </div>
        </div>
        <div class="col-md-6 order-md-1">
            <button class="btn btn-primary">Agregar</button>
        </div>
    </div>
   {{#if clientes}}
            <table class="table table-responsive text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-1">#</th>
                        <th scope="col" class="col-2">DNI</th>
                        <th scope="col" class="col-3">Nombre Completo</th>
                        <th scope="col" class="col-3">Telefono</th>
                        
                        <th scope="col" class="col-3">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each clientes}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{dniCliente}}</td>
                        <td>{{nombreCompleto}}</td>
                        <td>{{telefono}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editCliente/{{id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i> Editar
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <div class="col-12 text-center">
                <div class="card" style="width: 350px;">
                    <div class="card-header">
                        <h3>Debes crear una persona</h3>
                    </div>
                    <div class="card-body">
                        <p>Presiona este botón para registrar a una persona en la aplicación.</p>
                        <a href="/add" class="btn btn-primary">Ir a crear</a>
                    </div>
                </div>
            </div>
            {{/if}}
        </tbody>
    </table>
</div>



<div class="container">
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="text-center text-uppercase p-2">Lista de personas</h3>
            
        </div>
    </div>
</div>
